#!/usr/bin/env bash

set -e

CMD=$1;
if [ -z "$CMD" ]; then
    CMD="up"
else
    shift
fi

if [ "$CMD" == "reset" ]; then
    # Purge docker conainers/volumes
    make reset
    exit 0
elif [ "$CMD" == "build" ]; then
    make build
fi

make up "$@"

echo "Use 'docker-compose logs <service>' to display logs"

