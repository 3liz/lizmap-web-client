   <input ref="reg_login" required="true">
      <label locale="register.form.create.login"/>
   </input>

   <input ref="reg_email"  required="true" type="email">
       <label locale="register.form.create.email"/>
   </input>

   <secret ref="reg_password"  required="true" minlength="8" maxlength="120">
        <label locale="register.form.confirm.password.label"/>
        <help locale="register.form.confirm.password.help"/>
        <confirm locale="register.form.confirm.password2.label" />
   </secret>

   <captcha ref="reg_captcha">
       <label locale="register.form.create.captcha"/>
   </captcha>

   <submit ref="reg_submit">
       <label locale="register.form.create.submit" />
   </submit>
</form>