    <url pathinfo="/save"               action="registration:save"/>
    <url pathinfo="/confirm"            action="registration:confirm"/>
    <url pathinfo="/confirmform"        action="registration:confirmform"/>
    <url pathinfo="/confirmok"          action="registration:confirmok"/>

