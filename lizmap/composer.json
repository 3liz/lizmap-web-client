{
  "name": "lizmap/lizmap-web-client",
  "type": "project",
  "description": "",
  "license": "MPL-2.0",
  "authors": [
  ],
  "require": {
    "php": ">=8.2",
    "jelix/jelix": "dev-jelix-1.8.x",
    "jelix/composer-module-setup": "^1.1.0",
    "jelix/jcommunity-module": "^1.4.3",
    "jelix/ldapdao-module": "~2.2.4",
    "proj4php/proj4php": "~2.0.0",
    "violet/streaming-json-encoder": "^1.1.5",
    "guzzlehttp/guzzle": "^7.7.0",
    "halaxa/json-machine": "^1.1",
    "kevinrob/guzzle-cache-middleware": "^6.0",
    "twbs/bootstrap": "^5.3.3"
  },
  "minimum-stability": "stable",
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "jelix/composer-module-setup": true
    },
    "platform": {
      "php": "8.2"
    }
  },
  "extra": {
    "jelix": {
      "app-dir" : "./",
      "var-config-dir" : "var/config/"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "php -r \"copy('vendor/twbs/bootstrap/dist/css/bootstrap.min.css', 'www/assets/css/bootstrap.min.css');\"",
      "php -r \"copy('vendor/twbs/bootstrap/dist/js/bootstrap.min.js', 'www/assets/js/bootstrap.min.js');\""
    ]
  }
}
